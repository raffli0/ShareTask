<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShareTask" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--  Splash screen theme.  -->
    <style name="Splash.Theme.ShareTask" parent="Base.Theme.ShareTask">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.ShareTask" parent="Base.Theme.ShareTask" />
</resources>